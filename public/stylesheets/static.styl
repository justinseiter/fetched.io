.static
  .page-body
    max-width 710px
    margin auto
    background #fff
    padding 2em 2em
    border 1px solid #aaa
    box-shadow 0 1px 3px rgba(#000, 0.1)
    border-radius 4px
    position relative
    &.pad
      padding-top 5em
    ul
      list-style disc
      margin-left 1.2em
      &.done
        li
          opacity 0.5
    a
      color #90aa3c
      &:hover
        border-color #90aa3c
    .timestamp
      font-size 1.2rem
      color #999
      line-height 1
    .page-header
      position absolute
      box-shadow 0 1px 2px rgba(#000, 0.2)
      border-bottom 1px solid #000
      top 0
      border-top-left-radius 4px
      border-top-right-radius 4px
      border-bottom-left-radius 0
      border-bottom-right-radius 0
      right 0
      left 0
      background #282931
      color #fffbdc
      padding 1.2em 2em
      h1
        font-size 2rem
        color #fffbdc
        margin 0
      .powered-by
        font-size 1.2rem
        margin-left 0.1em
        opacity 0.5
        &:hover
          opacity 1
        a
          color #fffbdc
          border none
          &:hover
            color #fffbdc
        i
          padding-right 0.3em
          position relative
          top -1px
    .warn
      position absolute
      padding 1.4em 1em 1em 5.6em
      box-shadow 0 1px 2px rgba(#000, 0.2)
      border-bottom 1px solid #a7840c
      top 0
      border-top-left-radius 4px
      border-top-right-radius 4px
      border-bottom-left-radius 0
      border-bottom-right-radius 0
      right 0
      left 0
      text-shadow 0 1px 0 rgba(#000, 0.1)
      text-align left
      &:before
        content '\f026'
        font-family 'Fonticons'
        position absolute
        left 0.5em
        padding 1px
        text-shadow 0 -1px 0 rgba(#000, 0.4)
        top -0.03em
        font-size 5rem
        opacity 0.8
        color #a7840c
      p
        margin-bottom 0
        font-size 1.3rem
        color #a7840c
    .header-warn
      font-size 1.6rem
      line-height 1.1
      font-weight 600
      letter-spacing .08rem
      text-transform uppercase
      color #a7840c
      margin 0
    .page-image
      margin 0 auto 2em
      display block
      border-radius 4px
      border 1px solid
    pre
      background #eee
      font-size 1.3rem
      border-radius 2px
      padding 1em
      border 1px solid #e1e1e1
    .header-small
      border-bottom 1px solid #e1e1e1
      padding 2em 0 1em